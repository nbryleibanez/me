---
const experiences = [
  {
    role: "DevOps Engineer",
    company: "Career TEAM",
    period: "September 2025 - Present",
    current: true
  },
  {
    role: "DevOps Engineer",
    company: "Ingenuity Software",
    period: "April 2024 - September 2025"
  }
];
---

<section aria-labelledby="experience-heading" class="flex flex-col gap-4">
  <h2 id="experience-heading" class="text-white text-lg font-semibold">Experience</h2>
  <div class="flex flex-col gap-3" role="list">
    {experiences.map((exp) => (
      <article class="bg-white/5 backdrop-blur-sm rounded-xl p-4 transition duration-300 ease-out hover:bg-white/10 hover:shadow-lg hover:shadow-violet-500/10" role="listitem">
        <div class="flex items-center gap-2">
          <h3 class="text-white font-semibold">{exp.role}</h3>
          {exp.current && (
            <span class="text-xs bg-violet-500/20 text-violet-400 px-2 py-0.5 rounded-full" aria-label="Current position">Current</span>
          )}
        </div>
        <p class="text-zinc-400">{exp.company}</p>
        <p class="text-zinc-500 text-sm"><time>{exp.period}</time></p>
      </article>
    ))}
  </div>
</section>
